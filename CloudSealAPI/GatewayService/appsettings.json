{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/auth" },
          { "PathPrefix": "/api/auth" }
        ]
      },
      "user": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/user/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/user" },
          { "PathPrefix": "/api/user" }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth": {
            "Address": "__AUTH_SERVICE_URL__"
          }
        }
      },
      "user-cluster": {
        "Destinations": {
          "user": {
            "Address": "__USER_SERVICE_URL__"
          }
        }
      }
    }
  }
}
